# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=messaging_app
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=60000
DB_STATEMENT_TIMEOUT=60000

# Run migrations on startup (development only)
RUN_MIGRATIONS=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-at-least-32-chars
JWT_EXPIRES_IN=24h

# Password Hashing Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
REGISTER_RATE_LIMIT_WINDOW_MS=3600000
REGISTER_RATE_LIMIT_MAX_REQUESTS=2

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Configuration
TRUST_PROXY=false
SECURE_COOKIES=false

# SSL/TLS Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# SSL_CA_PATH=/path/to/ca.pem

# Session Configuration
SESSION_CLEANUP_INTERVAL=3600000

# Encryption Configuration
RSA_KEY_SIZE=2048
AES_KEY_LENGTH=256

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Production Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Email Configuration (if implementing email features)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@example.com
# EMAIL_PASSWORD=your_email_password
# EMAIL_FROM=noreply@yourapp.com
# EMAIL_SECURE=true